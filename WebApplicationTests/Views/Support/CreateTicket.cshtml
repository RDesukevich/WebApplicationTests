@model WebApplicationTests.Models.SupportTicket

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-controller="Support" asp-action="CreateTicket" method="post">
                <div class="form-group text-center">
                    <h3>Создание обращения</h3>
                </div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserEmailAddress"></label>
                    <input asp-for="UserEmailAddress" class="form-control" />
                    <span asp-validation-for="UserEmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Submit"></label>
                    <input asp-for="Submit" class="form-control" />
                    <span asp-validation-for="Submit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea style="height: 350px; resize: none" asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <a style="width: 100px; margin-right: 30px" asp-action="Index" asp-controller="Home" class="btn btn-primary">Back</a>
                    <input style="width: 100px" type="submit" value="Send" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>