@model WebApplicationTests.Models.User

<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/style.css" />

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="col-md-6 border rounded">
            <form asp-action="Login">
                <div class="form-group">
                    <label asp-for="Login"></label>
                    <input placeholder="Email" asp-for="Login" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input placeholder="Password" asp-for="Password" class="form-control" type="password"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-outline-secondary" />
                </div>
            </form>
            <p>Don't have an account yet? <a asp-action="Register">Register</a></p>
        </div>
    </div>
</div>
